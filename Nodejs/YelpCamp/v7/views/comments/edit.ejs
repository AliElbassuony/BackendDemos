<%- include('../partials/header') %>
<div class="container">
    <div>
        <h2 class="text-center mb-3">Edit Comment</h2>
        <div style="width: 30%;" class="m-auto">
            <form action="/campgrounds/<%= camp_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="comment[text]" class="form-control" value="<%=comment.text %>">
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit"class="form-control btn btn-primary">
                </div>
            </form>
            <a href="/campgrounds/<%=camp_id%>">Go Back</a>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>