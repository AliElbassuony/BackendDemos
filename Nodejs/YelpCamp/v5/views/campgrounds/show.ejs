<%- include('../partials/header')%>
<div class="container ">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">
                YelpCamp
            </p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item ">Info 2</li>
                <li class="list-group-item ">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="card-img-top" src='<%= camp.image %>' />
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="card-title"><a href="/campgrounds"> <%= camp.name %> </a></h4>
                        </div>
                        <div class="col-md-6">
                            <span class="float-right">$9.00/night</span>
                        </div>
                    </div>
                    <p class="card-text"><%= camp.desc %></p>
                </div>
            </div>
            <div class="card">
                <div class="card-header text-right">
                    <a class="btn btn-warning" href="/campgrounds/<%= camp._id %>/comments/new">new comment</a>
                </div>
                <div class="card-body">
                <% camp.comments.forEach(comment => { %>
                <div class="row">
                    <div class="col-md-12">
                      <strong>  <%= comment.author %></strong>
                        <span class="float-right">10 days ago</span>
                    </div>    
                </div>
                  <p class="card-text"><%= comment.text %></p>
                  <%});%>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>